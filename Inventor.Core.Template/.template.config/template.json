{
  "$schema": "http://json.schemastore.org/template",
  "description": "Autodesk Inventor addin template",
  "author": "ExtrabbitCode Tobias Wiesendanger",
  "classifications": [ "InventorAddin", "Inventor", "Library" ],
  "name": "ExtrabbitCode Inventor addin",
  "identity": "invAddinCore",
  "shortName": "invAddinCore",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ExtrabbitCode.Inventor.Core.Template",
  "preferNameDirectory": true,
  "guids": [ "d6b86a56-4b70-4028-8179-108b910edadd" ],
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(ui == 'wpfui')",
          "include": [ "UI/Dialog/**/*.xaml", "UI/Dialog/**/*.xaml.cs" ],
          "exclude": [ "UI/Dialog/frmInfo.cs", "Helper/WindowWrapper.cs", "UI/Dialog/frmInfo.designer.cs", "UI/Dialog/frmInfo.resx" ]
        },
        {
          "condition": "(ui == 'winforms')",
          "exclude": [ "UI/Dialog/**/*.xaml", "UI/Dialog/**/*.xaml.cs" ],
          "include": [ "UI/Dialog/frmInfo.cs", "Helper/WindowWrapper.cs" ]
        },
        {
          "exclude": [ ".vs/**", "bin/**", "obj/**" ],
          "include": [ "Directory.Build.props" ]
        },
        {
          "condition": "(installerType == 'inno')",
          "include": [ "Installer/**" ],
          "exclude": [ "WixInstaller/**" ]
        },
        {
          "condition": "(installerType == 'wix')",
          "include": [ "WixInstaller/**" ],
          "exclude": [ "Installer/**" ]
        },
        {
          "condition": "(installerType == 'none')",
          "exclude": [ "Installer/**", "WixInstaller/**" ]
        }
      ]
    }
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0-windows",
          "description": "Target net8.0-windows"
        },
        {
          "choice": "net9.0-windows",
          "description": "Target net9.0-windows"
        }
      ],
      "replaces": "net8.0-windows",
      "defaultValue": "net8.0-windows"
    },
    "inventorVersion": {
      "displayName": "Inventor Version",
      "type": "parameter",
      "datatype": "choice",
      "description": "Lowest Inventor version used for the add-in.",
      "choices": [
        {
          "choice": "2025",
          "description": "Autodesk Inventor 2025"
        },
        {
          "choice": "2026",
          "description": "Autodesk Inventor 2026"
        }
      ],
      "defaultValue": "2026",
      "replaces": "2026"
    },
    "addinDescription": {
      "displayName": "Addin Description",
      "type": "parameter",
      "defaultValue": "ExtrabbitCode.Description",
      "replaces": "ExtrabbitCode.Description",
      "datatype": "text",
      "description": "Description text used for addin."
    },
    "InstallFolder": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "C:\\ProgramData\\Inventor.Core.Template",
      "replaces": "ExtrabbitCode.InstallFolder",
      "description": "Defines where the addin will be installed. This is used in the build post event.",
      "isRequired": true
    },
    "ui": {
      "type": "parameter",
      "displayName": "UI Framework",
      "datatype": "choice",
      "description": "Choose a UI framework for dialogs.",
      "choices": [
        {
          "choice": "winforms",
          "description": "Use Windows Forms"
        },
        {
          "choice": "wpfui",
          "description": "Use Windows Forms"
        }
      ],
      "defaultValue": "wpfui"
    },
    "installerType": {
      "type": "parameter",
      "displayName": "Installer Type",
      "datatype": "choice",
      "description": "Choose the installer system to include.",
      "choices": [
        {
          "choice": "none",
          "description": "Do not include any installer"
        },
        {
          "choice": "inno",
          "description": "Include the Inno Setup installer scripts (Installer folder)"
        },
        {
          "choice": "wix",
          "description": "Include the WiX installer project"
        }
      ],
      "defaultValue": "inno"
    }
  },
  "primaryOutputs": [
    { "path": "README.md" }
  ],
  "postActions": [
    {
      "description": "Opens README.md in the editor",
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "0" // 0 = first file in primaryOutputs
      },
      "manualInstructions": [],
      "continueOnError": true
    }
  ]
}